<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="kr.ac.jejunu.portal_front.MainActivity">

    <Button
        android:id="@+id/btn_write_diary"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="일기 작성하기"/>

    <Button
        android:id="@+id/btn_read_anonymity"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="익명 일기 읽기"/>

    <Button
        android:id="@+id/btn_read_my"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="내가 작성한 일기"/>

</LinearLayout>
